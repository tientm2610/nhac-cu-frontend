</head>

<body>

   
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2 style="font-weight: bold;">Danh sách đơn hàng</h2>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Page title area -->

    <!-- main content -->
    
      
    <div style="display: flex; justify-content: space-between;">
        <table cellspacing="0" class="shop_table cart" style="width: 75%;" >
            <thead>
                <tr>
                    <th class="order-id">Mã đơn hàng</th>
                    <th class="order-address">Địa chỉ</th>
                    <th class="order-date">Ngày đặt hàng</th>
                    <th class="order-phone">Số điện thoại</th>
                    <th class="order-status">Trạng thái</th>
                    <th class="order-totalPrice">Tổng thành tiền</th>
                </tr>
            </thead>
        

            <tbody id="orders-container">
        
            </tbody>

        </table>
        <div class="order-detail-container" id="order-detail-container" style="width: 20%;">
            <h3>CHI TIẾT ĐƠN HÀNG</h3>
            <!-- <div class="order-detail-item" style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
                <div style="margin-bottom: 8px;">
                    
                    <p style="font-weight: bold; margin: 0;">Mã đơn hàng: ${item.orderId}</p>
                    <p style="margin: 0;">Mã sản phẩm: ${item.productId}$</p>
                    <p style="margin: 0;">Giá: ${item.price}$</p>
                    <p style="margin: 0;">Số lượng: ${item.unit}</p>
                    
                </div>
                
            </div> -->
           
        </div>
    </div>
    <!-- Footer -->
    <%- include('footer') %>

    <script src="https://code.jquery.com/jquery.min.js"></script>

    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.sticky.js"></script>

    <script src="handler/renderCart.js"></script>
    <script src="handler/renderOrder.js"></script>

    <script src="js/jquery.easing.1.3.min.js"></script>

    <script src="js/main.js"></script>

    <script type="text/javascript" src="js/bxslider.min.js"></script>
    <script type="text/javascript" src="js/script.slider.js"></script>
        
</body>

</html>

